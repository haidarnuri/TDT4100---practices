package Eksamen2019;

import java.util.ArrayList;
import java.util.Collection;

public class PriorityTreatmentUnit extends TreatmentUnit{
	
	private Collection<Patient> priorityPatients = new ArrayList<>();
	private Collection<Doctor> doctorsInPrority = new ArrayList<>();
	
	
	private boolean startTreatment(final Patient patient) {   // 1c
 	   boolean startTreatment = false;
 	   if(noAvailablePatientsOrDoctors()) {
 		   return startTreatment;
 	   }
 	   for(Doctor doc:getAvailableDoctors()) {
           if(doc.canTreat(patient)>0) {
         	doc.setPatient(patient);
         	doc.treat();
        	  	startTreatment=true;
        	  	break;
           }
        }
  	   return startTreatment;   
    }
	

}
