package patterns.delegation;


import java.io.OutputStream;


public class StreamLogger implements ILogger{
	
	
	String logMessage;
	
	public StreamLogger(OutputStream stream) {
		
	}
	
	
	
	
	@Override
	public void log(String severity, String message, Exception exception) {
		String logFormat = setFormatString(new String());	
		this.logMessage  = String.format(logFormat, severity, message, exception);
		
		
	}
	
	private String setFormatString(String formatString) {
		formatString = String.format("%s: %s (%s)");
		return formatString;
	}
	

	
}
