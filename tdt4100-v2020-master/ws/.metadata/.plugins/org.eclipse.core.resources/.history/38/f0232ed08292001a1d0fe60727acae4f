package EksamenKont2012;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.Collection;


public class WordList {
	
	Collection<String> wordList = new ArrayList<>();
	
	public WordList(String ...words) {
		wordList = Arrays.asList(words);
	}
	
	
	public boolean addWord(String word) {
		if(!wordList.contains(word)) {
			wordList.add(word);
		}		
		return containsWord(word);
	}
	
	
	public boolean removeWord(String word) {
		return wordList.remove(word);
	}
	
	private boolean containsWord(String word) {
		return this.wordList.contains(word);
	}
	
	private Collection<String> getWordStartingWith(String prefix){
		
	}
	
	
	
	
	

}
