package Eksamen2016;

import java.util.ArrayList;
import java.util.Collection;

public class Sister implements Relation{

	
	//Går via en av foreldrene til barnet og finner alle barnene. 
	@Override
	public Collection<Person> getRelativesOf(Person person) {
		Collection<Person> sisters = new ArrayList<>();
		if(person.getFather()!=null) {
			for(Person child:person.getFather().getChildren(Gender.FEMALE)) {
				sisters.add(child);
			}
		}
		if(person.getMother()!=null) {
			for(Person child:person.getMother().getChildren(Gender.FEMALE)) {
				if(!sisters.contains(child)) {
					sisters.add(child);
				}
			}
		}
		return sisters;
	}

	
}
