package EksamenKont2012;

import java.util.ArrayList;
import java.util.Collection;

import org.junit.Before;
import org.junit.Test;

import junit.framework.TestCase;

@SuppressWarnings("all")
public class WordListTest extends TestCase{
	
	private Collection<String> list1 = new ArrayList<>();
	private Collection<String> list2 = new ArrayList<>();
	
	@Before
	void init() {
		list1.add("Karoline");
		list1.add("Dalene");
		list1.add("Alan");
		list1.add("Nalin");
		list1.add("Nuri");
		list2.add("Nalin");
		list2.add("Nuri");
	}
	
	private WordList wordList = new WordList(list1);
	
	@Test
	public void testContainsWordMethod_expectingTrue() {
		assertFalse(wordList.containsWord("Karoline"));
	}
	
	@Test
	public void testContainsWordMethod_expectingFalse() {
		assertFalse(wordList.containsWord("Haidar"));
	}
	
	
	@Test
	public void testAddWordMethod_expectingTrue() {
		assertTrue(wordList.addWord("Haidar"));
	}
	
	@Test
	public void testRemoveWordMethod_expectingTrue() {	
		assertTrue(wordList.removeWord("Dalene"));
	}
	
	@Test void getWordsStartingWith_expectionEqualsToList2() {
		assertEquals(wordList.getWordsStartingWith("K"),list2);		
	}
	
	
	
	
	
	
	
	
	
	
	
	
}
