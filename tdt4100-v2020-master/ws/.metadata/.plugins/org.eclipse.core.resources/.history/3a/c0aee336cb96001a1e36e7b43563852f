package EksamenKont2016;

public class Exam {
	
	private Course course;
	private char grade;
     
     /**
      * Initialises an Exam, by setting the course and grade.
      * The grade can only be set to one of the characters 'A'-'F'.
      * @throws IllegalArgumentException if the grade is not legal
      */
     public Exam(Course course, char grade) { 
    	 checkGrade(grade); 
    	 this.course=course; 
    	 this.grade=grade;
    }
    //Validerer om karakteren er mellom A-F
     private void checkGrade(char grade) {
    	 if(!String.valueOf(grade).matches("^[A-F]{1}$")) {
    		 throw new IllegalArgumentException("Grade can only be between A-F");
    	 }
   
     }
    	 
    	 
    /**
     * Tells whether this Exam has a result that is a passing grade.
     */
    public boolean isPass() { ... }
     }

     public static void main(final String[] args) {
			Course course = new Course("TDT4100");
			
			
		}
}
