package Eksamen2016;

/**
 * This class represents the gender of a Person.
 * It cannot be instantiated outside this class.
 * It provides all legal Gender values as static variables.
 */
public class Gender {
 
	
   //feltene og konstruktøren skal ikke være direkte tilgjengelig for andre klasser. 
   private final String label;
   
 
   private Gender(String label) {
      this.label = label;
   }
 
   /*
    * toString metoden viser at klassen viser verdien av 
    * label når du kaller System.oiut.printl(#Gender-objekt)
    */
   @Override
   public String toString() {
      return label;
   }
 
   public static Gender
      MALE = new Gender("male"),
      FEMALE = new Gender("female");
 
   /**
    * Returns a pre-existing Gender instance for the provided label, or
    * null of there is no such instance.
    * @param label
    * @return a pre-existing Gender instance
    */
   public Gender valueOf(String label) {
	   //Setter lik små bokstaver slik at det stemmer med hvordan det er skrevet i den statiske metoden. 
	   Gender tempGender = new Gender(label.toLowerCase());
	   if(validateGender(tempGender)) {
		   return null;
	   }else {
		   return tempGender;
	   }
   }
   
   private boolean validateGender(Gender tempGender) {
	   return gender.equals(FEMALE)||gender.equals(MALE);
   }
   
   
   
   
   
}
