package Eksamen2016;

import java.util.ArrayList;
import java.util.Collection;

public class Sibling implements Relation{
	
	//Det er snakk om søsken. Hvis genderToSeek er jente så søkes det etter søstre. 
	private Gender genderToSeek;
	
	public Sibling(Gender genderToSeek) {
		this.genderToSeek=genderToSeek;
	}
	
	@Override
	public Collection<Person> getRelativesOf(Person person) {
		Collection<Person> sibling = new ArrayList<>();
		if(person.getFather()!=null) {
			for(Person child:person.getFather().getChildren(this.genderToSeek)) {
				sibling.add(child);
			}
		}
		if(person.getMother()!=null) {
			for(Person child:person.getMother().getChildren(this.genderToSeek)) {
				if(!sisters.contains(child)) {
					sisters.add(child);
				}
			}
		}
		return sisters;
	}

}
