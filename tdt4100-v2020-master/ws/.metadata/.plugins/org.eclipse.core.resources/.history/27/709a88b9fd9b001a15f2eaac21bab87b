package EksamenKont2019;

import java.util.ArrayList;
import java.util.Collection;

import org.junit.Before;
import org.junit.Test;

import junit.framework.TestCase;

public class BikeRentalTest extends TestCase{

	private Person person1 = new Person("Haidar");
	
	private GeoLocation location1 = new GeoLocation(21.1, 25.0);
	private GeoLocation location2 = new GeoLocation(21.1, 24.0);
	
	private Bike bike1 = new Bike();
	private Bike bike2 = new Bike();
	
	private BikeRental osloBySykkel = new BikeRental();
	
	@Before
	public void init() {
		bike1.setRenter(person1);
		bike1.setLocation(location1);
		bike2.setRenter(null);
		osloBySykkel.addBike(bike1);
		osloBySykkel.addBike(bike2);
		osloBySykkel.addStation(location2);
	}
	
	
	@Test
	public void testGetUnreturnedBikes() {
		Collection<Bike> expectedCollection = new ArrayList<>();
		expectedCollection.add(bike1);
		assertTrue(osloBySykkel.getUnreturnedBikes().contains(bike1));
	}
	
	
	
	
	
	
}
