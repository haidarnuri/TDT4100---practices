package bike;


//Antar at personen kan velge i konstruktøren om han ønsker abonoment eller ikke. 

public class Person{
	
	private boolean dagsPass,mndPass;
	
	//Dersom han skriver false på begge så må han betale vanlig timespris. 
	public Person(boolean dagsPass,boolean mndPass) {
		this.dagsPass=dagsPass;
		this.mndPass=mndPass;
	}
	
	
	
	
	//optimalt så burde man sjekke om denne personen har en sykkel, men gjør det hvis jeg får tid senere. 
	public void pay(double price) {
		//antar at det finnes en metode som gjør at personen betaler. 
	}

	public boolean isMndPass() {
		return mndPass;
	}
	
	public boolean isDagsPass() {
		return dagsPass;
	}
	
	
	
	
	
	
}
