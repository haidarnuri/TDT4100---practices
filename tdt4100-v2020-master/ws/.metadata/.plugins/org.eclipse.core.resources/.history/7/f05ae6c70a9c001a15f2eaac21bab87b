package EksamenKont2018;

import java.util.ArrayList;
import java.util.Collection;
import java.util.Collections;
import java.util.Iterator;

public class Straight extends AbstractScorer {
	  
    public Straight(int score) {
        super(score);
    }
  
    @Override
    public DiceScore getScore(Dice dice) {
    	
        
    }
   
	@Override
	public Collection<Integer> internalScoreCounter() {
		boolean straightFailed = false;
        int compareInt1 =0;       
        while(diceIterator.hasNext()) {
        	int temp=diceIterator.next();
        	if(temp != compareInt1+1) {
        		straightFailed=true;
        		break;
        	}else {
        		scoreDiceValues.add(temp);
        		compareInt1=temp;
        	}
        }
        if(straightFailed) {
			return null;
		}else {
			return scoreDiceValues;
		}
	}
}
