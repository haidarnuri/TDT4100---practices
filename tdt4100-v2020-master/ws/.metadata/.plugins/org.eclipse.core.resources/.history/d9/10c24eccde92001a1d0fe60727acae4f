package EksamenKont2014;

import org.junit.Test;

import junit.framework.TestCase;

public class AccountTest extends TestCase{
	
	Account account1 = new Account("1");
	
	
	@Test
	public void testNegativeWithdrawal() {
		try {
			account1.withdraw(-10);
			fail("Should not be able to withdraw negative amount");
		}catch(IllegalArgumentException e) {
		
		}		
	}
	
	@Test
	public void testTooLargeWithdrawal() {
		account1.deposit(100);
		try {
			account1.withdraw(101);
			fail("Should not be able to withdraw too large amount");
		}catch(IllegalArgumentException e) {
			
		}
	}
	
	@Test
	public void testNegativeDeposit() {
		try {
			account1.deposit(-10);
			fail("Should not be able to deposit negative amount");
		}catch(IllegalArgumentException e) {
		
		}		
	}
	
	@Test
	public void testcheckValidAccountId() {
		try {
			account1 = new Account("2");
			fail("Should not be able to add letters in ID");
		}catch(IllegalArgumentException e) {
		
		}		
	}
	
	
	

}
