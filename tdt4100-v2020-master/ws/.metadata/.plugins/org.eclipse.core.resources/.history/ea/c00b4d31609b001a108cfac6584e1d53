package Eksamen2016;

import java.util.Collection;

public class Sister implements Relation{

	
	//Går via en av foreldrene til barnet og finner alle barnene. 
	@Override
	public Collection<Person> getRelativesOf(Person person) {
		Collection<Person> sisters = person.getFather().getChildren(Gender.valueOf("female"));
		return sisters;
	}
	
	private void validateMother(Person mother) {
		if(mother==null) {
			throw new IllegalArgumentException("Can not find mother");
		}
	}

	private void validateFather(Person father) {
		if(father==null) {
			throw new IllegalArgumentException("Can not find mother");
		}
	}
	
	
}
