package Eksamen2019;

import static org.junit.Assert.assertEquals;
import static org.junit.Assert.assertTrue;

import org.junit.Before;
import org.junit.Test;

public class TreatmentUnitTest {
	 
	 
    private TreatmentUnit treatmentUnit;
    Doctor doctor1;
    Doctor doctor2;
	Patient  haidar;


    @Before
    public void setUp() {
    	doctor1 = new Doctor("flu"); // new doctor can treat "flu"
        doctor2 = new Doctor("noseblead","pneumonia"); // new doctor can treat "noseblead" and "pneumonia"
    	treatmentUnit.addDoctor(doctor1);
        treatmentUnit.addDoctor(doctor2);
        haidar = new Patient("Haidar");
        haidar.addCondition("flu");
    }




    @Test
    public void testAddDoctorsPatient() {
    	doctor1.setPatient(null);
    	doctor2.setPatient(null);
       assertTrue(treatmentUnit.getAvailableDoctors().contains(doctor1));
     }




	
}